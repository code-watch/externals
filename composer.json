{
    "name": "mnapoli/externals",
    "description": "This is the project for externals.io",
    "license": "MIT",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Externals\\": "src/"
        },
        "files": [
            "init.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Externals\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "algolia/algoliasearch-client-php": "^1.28",
        "bref/bref": "^1.2",
        "bref/logger": "^1.0",
        "bref/micro": "^0.1.0",
        "doctrine/dbal": "^3.0",
        "league/commonmark": "^1.3",
        "league/oauth2-client": "^2.5",
        "league/oauth2-github": "^2.0",
        "mnapoli/silly": "^1.7",
        "php-di/php-di": "^7.0.0-beta2",
        "psr/http-message": "^1.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr7-sessions/storageless": "^7.0",
        "rvdv/nntp": "^0.9.2",
        "sentry/sdk": "^3.0",
        "twig/extensions": "^1.5",
        "twig/twig": "^2.0",
        "vlucas/phpdotenv": "^5.0",
        "vstelmakh/url-highlight": "^3.0",
        "zbateson/mail-mime-parser": "^2"
    },
    "require-dev": {
        "bref/dev-server": "^0.2",
        "mnapoli/hard-mode": "^0.3",
        "phpunit/phpunit": "^9.2.6",
        "vimeo/psalm": "^4.2"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "php-http/discovery": true
        },
        "platform": {
            "php": "8.1"
        }
    }
}
